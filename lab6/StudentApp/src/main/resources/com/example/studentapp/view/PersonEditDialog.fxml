<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentapp.view.PersonEditDialogController">
    <GridPane layoutX="20.0" layoutY="20.0" hgap="10" vgap="10">
        <!-- Поле для ввода имени -->
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- Поле для ввода фамилии -->
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Поле для ввода номера группы -->
        <Label text="Group Code:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="groupCodeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Поле для ввода даты рождения -->
        <Label text="Birthday (dd.MM.yyyy):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="birthdayField" promptText="dd.MM.yyyy" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Новое поле для ввода электронной почты -->
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="emailField" promptText="example@mail.com" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Новое поле для ввода возраста -->
        <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="ageField" promptText="18" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- Новое поле для ввода среднего балла -->
        <Label text="GPA:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="gpaField" promptText="4.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <!-- Кнопки управления -->
        <GridPane hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" layoutY="10.0">
            <Button text="OK" onAction="#handleOk" GridPane.columnIndex="0" />
            <Button text="Cancel" onAction="#handleCancel" GridPane.columnIndex="1" />
        </GridPane>
    </GridPane>
</AnchorPane>
